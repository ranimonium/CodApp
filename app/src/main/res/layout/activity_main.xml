<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="calls"
        android:id="@+id/btnCalls"
        android:layout_marginRight="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginEnd="53dp"
        android:layout_marginTop="91dp"
        android:onClick="showCalls" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SMS"
        android:id="@+id/btnMsgs"
        android:layout_below="@+id/btnCalls"
        android:layout_alignRight="@+id/textView"
        android:layout_marginRight="28dp"
        android:onClick="showMsgs"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi there, user.  We&apos;ll be using our tentacles to crawl over your privacy."
        android:id="@+id/textView"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
